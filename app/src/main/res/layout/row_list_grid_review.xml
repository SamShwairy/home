<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@android:color/white"
    android:padding="@dimen/unit_4"
    android:layout_margin="@dimen/unit_4"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/likeDislikeImage"
        android:layout_width="@dimen/unit_32"
        android:layout_height="@dimen/unit_32"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/like_dislike_image"
        android:layout_alignParentEnd="true"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"/>

    <ImageView
        android:id="@+id/artworkImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/article_image"
        android:padding="@dimen/unit_32"
        android:scaleType="fitCenter"
        android:textColor="@color/colorPrimary" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:padding="@dimen/unit_8"
            android:textSize="@dimen/unit_16_text"
            android:textStyle="bold"
            android:id="@+id/articleTitle"
            android:background="@color/dimmed"
            android:layout_alignParentBottom="true"
            android:textColor="@android:color/white"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>