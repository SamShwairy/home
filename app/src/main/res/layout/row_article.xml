<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/unit_8"
    app:cardBackgroundColor="@android:color/white">


    <LinearLayout
        android:id="@+id/topLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/unit_16"
        android:background="@android:color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/articleTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unit_8"
            android:lines="1"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="@dimen/unit_32_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/articlePrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unit_8"
            android:lines="1"
            android:maxLines="1"
            android:padding="@dimen/unit_2"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/unit_16_text" />

        <TextView
            android:id="@+id/articleNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unit_16"
            android:lines="1"
            android:maxLines="1"
            android:padding="@dimen/unit_2"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/unit_16_text" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/likeDislikeImage"
                android:layout_width="@dimen/unit_32"
                android:layout_height="@dimen/unit_32"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:contentDescription="@string/like_dislike_image"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/artworkImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@string/article_image"
                android:padding="@dimen/unit_32"
                android:src="@drawable/placeholder"
                android:scaleType="fitCenter"
                android:textColor="@color/colorPrimary" />
        </RelativeLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>